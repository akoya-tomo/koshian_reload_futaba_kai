{
    "manifest_version":2,

    "name":"KOSHIAN リロード拡張",

    "version":"1.3.5",

    "description":"マウスホイールでカタログやレス画面をリロードします",

    "icons":{
        "48":"icons/icon-48.png"
    },

    "content_scripts":[
        {
            "exclude_matches": ["*://*.2chan.net/*/res/**","*://*.2chan.net/*/src/*"],
            "matches":["*://*.2chan.net/*/*"],
            "js":["cat.js"]
        },
        {
            "matches":["*://*.2chan.net/*/res/*"],
            "js":["res.js"]
        }
    ],

    "options_ui":{
        "page":"options.html"
    },

    "permissions":[
        "storage"
    ],
    
    "applications":{
        "gecko":{
            "id":"{16463c99-1571-4088-a62c-44420f5ebdb7}"
        }
    }    
}